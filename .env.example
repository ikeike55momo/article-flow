# Google AI API設定
GOOGLE_AI_API_KEY=your_api_key_here
GOOGLE_CLOUD_PROJECT=your_project_id
GOOGLE_AI_LOCATION=us-central1

# セキュリティ設定
API_KEY_ROTATION_DAYS=30
API_RATE_LIMIT_PER_MINUTE=10
API_RATE_LIMIT_PER_DAY=1000

# 画像生成設定
IMAGE_GENERATION_ENABLED=true
IMAGE_QUALITY=high
IMAGE_WIDTH=800
IMAGE_HEIGHT=600
IMAGE_FORMAT=webp

# コスト管理
MONTHLY_BUDGET_USD=50
ALERT_THRESHOLD_PERCENT=80
AUTO_STOP_ON_BUDGET_EXCEED=true

# 開発/本番環境切り替え
ENVIRONMENT=development
# development: 低解像度、少数生成
# production: 高解像度、複数生成

# チーム設定（オプション）
TEAM_SHARED_PROJECT_ID=
TEAM_BILLING_ACCOUNT=

# ログ設定
LOG_LEVEL=info
LOG_API_CALLS=true
LOG_COSTS=true